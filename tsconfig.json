{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "alwaysStrict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,

    "baseUrl": "./",
    "paths": {
      "@webmangler/benchmarking": ["packages/benchmarking/build"],
      "@webmangler/language-css": ["packages/language-css/build"],
      "@webmangler/language-utils": ["packages/language-utils/build"],
      "@webmangler/testing": ["packages/testing/build"],
      "@webmangler/types": ["packages/types/build"],
      "webmangler": ["packages/core/build"],
      "webmangler/languages": ["packages/core/build/languages"],
      "webmangler/manglers": ["packages/core/build/manglers"]
    }
  },
  "exclude": [
    "node_modules/"
  ]
}
