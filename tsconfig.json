{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "packages/"
    ]
  },
  "exclude": [
    "node_modules/"
  ]
}
