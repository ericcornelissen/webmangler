{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "alwaysStrict": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true
  },
  "exclude": [
    "node_modules/"
  ]
}
